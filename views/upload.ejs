<%- include('templates/header') -%>
    <div class="profileContainer">
            <nav class="navbar navbar-dark bg-dark justify-content-between">
              <a class="navbar-brand" href="/">
                  <h2 id="name">Thrifster</h2>
              </a>
              <form action="/searchResults">
                <input name="searchedItem" id="searchBar" class="form-control mr-sm-2" type="text" placeholder="Search either by tags, date, and price!" aria-label="Search" required>
                <button class='btn btn-outline-success my-2 my-sm-0' style="margin:5px;"><strong>Search</strong></button>
              </form>
                <div class="btn-group">
                  <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Menu
                  </button>
                  <div class="dropdown-menu dropdown-menu-right">
                    <form action="/profile">
                        <button class="dropdown-item" type="submit">Profile</button>
                    </form>
                    <form action="/logout">
                        <button class="dropdown-item" type="submit">Log Out</button>
                    </form>
                  </div>
                </div>
            </nav>
        </div>
        <h5 style="text-align:center">Upload Item</h5>
        <form  class='container' action="/upload" method="POST" enctype='multipart/form-data'>
            <div class="form-group row">
                <input type='text' placeholder="Item Name" name="itemName" required>
            </div>
            <div class="form-group row">
                <input type='text' placeholder="Description" name="itemDescription" required>
            </div>
            <div class="form-group row">
                <input type='text' placeholder="Item Cost" name="itemCost" required>
            </div>
            <div class='form-group row'>
                <laber for='filename' class='col-sm-4 col-form-label'>Select File</laber>
                <div class='col-sm-4'>
                    <input type='file' class='form-control' id='filename' name='filename' accept='image/*' required>
                </div>
            </div>
            <div class='form-group row'>
                <div class='col-sm-4'></div>
                <div class='col-sm-4'>
                    <button class='btn btn-primary btn-block'>Submit</button>
                </div>
                <div class='col-sm-4'></div>
            </div>
        </form>
<%- include('templates/footer') -%>